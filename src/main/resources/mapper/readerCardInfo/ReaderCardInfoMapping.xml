<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.executer.readerCardInfo.dao.ReaderCardInfoDao">

    <resultMap id="BaseResultMap" type="com.example.demo.executer.readerCardInfo.model.ReaderCardInfoModel">
        <result column="id" property="id"/>
        <result column="register_date" property="registerDate"/>
        <result column="card_id" property="cardId"/>
        <result column="reader_name" property="readerName"/>
        <result column="reader_phone" property="readerPhone"/>
        <result column="reader_card_type" property="readerCardType"/>
        <result column="reader_card_no" property="readerCardNo"/>
        <result column="borrow_max_times" property="borrowMaxTimes"/>
        <result column="borrow_usable_times" property="borrowUsableTimes"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insertOne" parameterType="com.example.demo.executer.readerCardInfo.model.ReaderCardInfoModel">
        <trim>
        insert into t_reader_card(
        id,
        reader_id,
        card_amt,
        create_date
        )
        values(
        #{id},
        #{readerId},
        #{cardAmt},
        #{createDate}
        );
        </trim>
    </insert>

    <update id="updateOne" parameterType="com.example.demo.executer.readerCardInfo.model.ReaderCardInfoModel">
        update t_reader_card set
        <trim suffixOverrides=",">
            <if test="readerId != null">
                reader_id = #{readerId},
            </if>
            <if test="usableFlag != null">
                usable_flag = #{usableFlag},
            </if>
            <if test="cardAmt != null">
                card_amt = #{cardAmt},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="selectOne" parameterType="java.lang.String" resultMap="BaseResultMap">
        select id,
               readerId,
               usableFlag,
               cardAmt,
               createDate,
               createTime,
               updateTime
        from t_reader_card
        where id = #{id}
    </select>


</mapper>